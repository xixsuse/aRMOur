<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="help_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="help_title" parent="help_text">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="help_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="help_menu_icon" parent="help_icon">
        <item name="android:scaleType">center</item>
        <item name="android:background">@drawable/menu_background</item>
    </style>

    <style name="help_fab_icon" parent="help_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="help_label" parent="help_text">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="help_description" parent="help_text">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:layout_margin">16dp</item>
    </style>

</resources>
