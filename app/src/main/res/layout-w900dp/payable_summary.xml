<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ToggleButton
            android:id="@+id/unclaimed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:drawableLeft="@drawable/unclaimed_black_24dp"
            android:drawableStart="@drawable/unclaimed_black_24dp"
            android:textOff="@string/unclaimed"
            android:textOn="@string/unclaimed"
            />
        <ToggleButton
            android:id="@+id/claimed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:drawableEnd="@drawable/claimed_black_24dp"
            android:drawableRight="@drawable/claimed_black_24dp"
            android:textOff="@string/claimed"
            android:textOn="@string/claimed"
            />

        <ToggleButton
            android:id="@+id/paid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:drawableEnd="@drawable/paid_black_24dp"
            android:drawableRight="@drawable/paid_black_24dp"
            android:textOff="@string/paid"
            android:textOn="@string/paid"
            />

    </LinearLayout>

    <include layout="@layout/totals_recycler"/>

</LinearLayout>