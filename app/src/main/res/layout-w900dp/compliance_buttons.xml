<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ToggleButton
        android:id="@+id/compliant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:checked="true"
        android:drawableEnd="@drawable/ic_compliant_black_24dp"
        android:drawableRight="@drawable/ic_compliant_black_24dp"
        android:textOff="@string/compliant"
        android:textOn="@string/compliant" />

    <ToggleButton
        android:id="@+id/non_compliant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:checked="true"
        android:drawableEnd="@drawable/ic_non_compliant_red_24dp"
        android:drawableRight="@drawable/ic_non_compliant_red_24dp"
        android:textOff="@string/non_compliant"
        android:textOn="@string/non_compliant" />
</merge>