<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_card_margin"
    android:minHeight="?android:attr/listPreferredItemHeight">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_contents_margin"
                android:layout_weight="1"
                android:gravity="start"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="Monday 27/03/2016" />

            <TextView
                android:id="@+id/start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_contents_margin"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="08:00am" />

            <TextView
                android:id="@+id/end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_contents_margin"
                android:layout_weight="1"
                android:gravity="end"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="4:30pm" />
        </LinearLayout>

        <TextView
            android:id="@+id/minimum_rest_hours_between_shifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_contents_margin"
            android:drawableLeft="@drawable/ic_warning_24dp"
            android:drawableStart="@drawable/ic_warning_24dp"
            android:gravity="center"
            android:text="@string/minimum_rest_hours_between_shifts"
            android:textColor="@color/colorError"
            android:visibility="gone" />

        <TextView
            android:id="@+id/maximum_hours_per_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_contents_margin"
            android:drawableLeft="@drawable/ic_warning_24dp"
            android:drawableStart="@drawable/ic_warning_24dp"
            android:gravity="center"
            android:text="@string/maximum_hours_per_day"
            android:textColor="@color/colorError"
            android:visibility="gone" />

        <TextView
            android:id="@+id/maximum_hours_per_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_contents_margin"
            android:drawableLeft="@drawable/ic_warning_24dp"
            android:drawableStart="@drawable/ic_warning_24dp"
            android:gravity="center"
            android:text="@string/maximum_hours_per_week"
            android:textColor="@color/colorError"
            android:visibility="gone" />

        <TextView
            android:id="@+id/maximum_hours_per_fortnight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_contents_margin"
            android:drawableLeft="@drawable/ic_warning_24dp"
            android:drawableStart="@drawable/ic_warning_24dp"
            android:gravity="center"
            android:text="@string/maximum_hours_per_fortnight"
            android:textColor="@color/colorError"
            android:visibility="gone" />

        <TextView
            android:id="@+id/maximum_consecutive_weekends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_contents_margin"
            android:drawableLeft="@drawable/ic_warning_24dp"
            android:drawableStart="@drawable/ic_warning_24dp"
            android:gravity="center"
            android:text="@string/maximum_consecutive_weekends"
            android:textColor="@color/colorError"
            android:visibility="gone" />

    </LinearLayout>
</android.support.v7.widget.CardView>