<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/primary_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_normal_day_black_24dp" />

    <ImageView
        android:id="@+id/secondary_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_check_black_24dp" />

    <TextView
        android:id="@+id/primary_text"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/secondary_text"
        app:layout_constraintEnd_toStartOf="@id/secondary_icon"
        app:layout_constraintLeft_toRightOf="@id/primary_icon"
        app:layout_constraintRight_toLeftOf="@id/secondary_icon"
        app:layout_constraintStart_toEndOf="@id/primary_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginBottom="20dp"
        tools:text="Monday 27/02/17" />

    <TextView
        android:id="@+id/secondary_text"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tertiary_text"
        app:layout_constraintEnd_toStartOf="@id/secondary_icon"
        app:layout_constraintLeft_toRightOf="@id/primary_icon"
        app:layout_constraintRight_toLeftOf="@id/secondary_icon"
        app:layout_constraintStart_toEndOf="@id/primary_icon"
        app:layout_constraintTop_toBottomOf="@id/primary_text"
        app:layout_goneMarginBottom="20dp"
        tools:text="8:00am - 4:00pm" />

    <TextView
        android:id="@+id/tertiary_text"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/secondary_icon"
        app:layout_constraintLeft_toRightOf="@id/primary_icon"
        app:layout_constraintRight_toLeftOf="@id/secondary_icon"
        app:layout_constraintStart_toEndOf="@id/primary_icon"
        app:layout_constraintTop_toBottomOf="@id/secondary_text"
        tools:text="Cardiology" />

</android.support.constraint.ConstraintLayout>