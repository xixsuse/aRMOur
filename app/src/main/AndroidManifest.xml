<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.skepticalone.armour">
    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.skepticalone.armour.ui.common.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.skepticalone.armour.ui.detail.DetailActivity"
            android:parentActivityName="com.skepticalone.armour.ui.common.MainActivity" />
        <activity
            android:name="com.skepticalone.armour.settings.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName="com.skepticalone.armour.ui.common.MainActivity" />
    </application>

</manifest>